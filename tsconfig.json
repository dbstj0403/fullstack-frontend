{
  "compilerOptions": {
    "target": "ES2022",                // 최신 문법 사용
    "module": "esnext",                // ESM 시스템
    "moduleResolution": "node16",      // Tailwind 타임 문제 해결
    "jsx": "react-jsx",                // React 17+ JSX 설정
    "strict": true,                    // 엄격한 타입 검사
    "esModuleInterop": true,           // CommonJS 호환
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
